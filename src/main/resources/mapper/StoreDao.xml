  <!--查询门店信息以及门店下设备数量  -->
  <select id="selectStoreInfoAndDeviceCount" resultMap="StoreAndDeviceCountResultMap">
        SELECT s.*,COUNT(m.id) AS new_device_count FROM `t_stores`  s LEFT JOIN machine_info m ON s.id=m.store_id
        where 1=1
        <if test="agentId != null and agentId != '' ">
            and s.agent_id=#{agentId}
        </if>
        GROUP BY s.id
  </select>



