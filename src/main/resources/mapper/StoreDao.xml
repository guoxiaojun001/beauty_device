  <select id="selectStoreInfoAndDeviceCountByStoreName" resultMap="StoreAndDeviceCountResultMap">
    SELECT s.*,COUNT(m.id) AS new_device_count ,u.name FROM t_stores s
        LEFT JOIN machine_info m ON s.id=m.store_id
        LEFT JOIN user_info u ON s.agent_id=u.id

    WHERE 1=1
    <if test="agentId != null and agentId != '' ">
      and s.agent_id=#{agentId}
    </if>
    <if test="parms != null and parms != '' ">
       AND (s.store_name LIKE CONCAT('%',#{parms},'%')
                OR s.contact_person LIKE CONCAT('%',#{parms},'%')
                OR s.code LIKE CONCAT('%',#{parms},'%')
                OR s.contact_phone LIKE CONCAT('%',#{parms},'%')
                OR s.address LIKE CONCAT('%',#{parms},'%') )
    </if>

    GROUP BY s.id
    LIMIT #{pageIndex},#{pageSize};

  </select>

